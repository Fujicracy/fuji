{
	"name": "@fuji/monorepo",
	"version": "1.0.0",
	"keywords": [
		"ethereum",
		"react",
		"uniswap",
		"workspaces",
		"yarn"
	],
	"private": true,
	"engines": {
		"node": ">=14.17.1",
		"npm": ">=6.12.1"
	},
	"scripts": {
		"lint": "yarn workspaces run lint",
		"lint:fix": "yarn workspaces run lint:fix",
		"lint:sol": "yarn workspace @fuji/hardhat-old lint:sol",
		"format": "yarn workspaces run format",
		"format:sol": "yarn workspace @fuji/hardhat-old format:sol",
		"react-app:build": "yarn workspace @fuji/react-app build --max-old-space-size=12288",
		"react-app:eject": "yarn workspace @fuji/react-app eject",
		"react-app:test": "yarn workspace @fuji/react-app test",
		"build": "yarn workspace @fuji/react-app build --max-old-space-size=12288",
		"chain": "yarn workspace @fuji/hardhat-old chain",
		"fork": "yarn workspace @fuji/hardhat-old fork",
		"fork2": "yarn workspace @fuji/hardhat-old fork2",
		"node": "yarn workspace @fuji/hardhat-old chain",
		"contracts:publish": "node tasks/publish",
		"contracts:download": "node tasks/downloadContractsData",
		"contracts:upload": "node tasks/uploadContractsData",
		"contracts:size": "yarn workspace @fuji/hardhat-old contracts:size",
		"compile": "yarn workspace @fuji/hardhat-old compile",
		"deploy": "yarn workspace @fuji/hardhat-old deploy && yarn contracts:publish",
		"watch": "yarn workspace @fuji/hardhat-old watch",
		"accounts": "yarn workspace @fuji/hardhat-old accounts",
		"balance": "yarn workspace @fuji/hardhat-old balance",
		"send": "yarn workspace @fuji/hardhat-old send",
		"start": "yarn workspace @fuji/react-app start:dev",
		"ipfs": "yarn workspace @fuji/react-app ipfs",
		"surge": "yarn workspace @fuji/react-app surge",
		"s3": "yarn workspace @fuji/react-app s3",
		"ship": "yarn workspace @fuji/react-app ship",
		"bots:liquidate": "yarn workspace @fuji/bots liquidate",
		"generate": "yarn workspace @fuji/hardhat-old generate",
		"account": "yarn workspace @fuji/hardhat-old account",
		"mine": "cd packages/hardhat-old && npx hardhat mine",
		"wallet": "cd packages/hardhat-old && npx hardhat wallet",
		"fundedwallet": "cd packages/hardhat-old && npx hardhat fundedwallet",
		"flatten": "cd packages/hardhat-old && npx hardhat flatten",
		"prepare": "husky install"
	},
	"lint-staged": {
		"**/*.{js,jsx}": [
			"yarn lint"
		],
		"**/*.sol": [
			"yarn lint:sol"
		]
	},
	"workspaces": {
		"packages": [
			"packages/*",
			"tasks"
		],
		"nohoist": []
	},
	"dependencies": {
		"husky": ">=6",
		"lint-staged": ">=10"
	}
}
